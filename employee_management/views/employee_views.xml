<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">employee.management.tree</field>
        <field name="model">employee.management</field>
        <field name="type">list</field>  
        <field name="arch" type="xml">
            <list string="Danh sách nhân viên">  
                <field name="name"/>
		<field name="age"/>
		<field name="department"/>
            </list>
        </field>
    </record>

    <record id="employee_management_form_view" model="ir.ui.view">
        <field name="name">employee.management.form</field>
        <field name="model">employee.management</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
		        <field name="age"/>
		        <field name="department"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_action" model="ir.actions.act_window">
	    <field name="name">Danh sách nhân viên</field>
	    <field name="res_model">employee.management</field>
	    <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_employee_root" name="Quản lý nhân viên" sequence="10"/>
    <menuitem id="menu_employee_list" name="Danh sách nhân viên" 
              parent="menu_employee_root" action="employee_action"/>

</odoo>

